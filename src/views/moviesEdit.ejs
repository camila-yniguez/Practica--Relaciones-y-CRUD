<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">
        <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= Movie.title %>" ></p>
            <p>
                <%= locals.errors && errors.title ? errors.title.msg : "" %>
            </p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%= Movie.rating %>" ></p>
            <p>
                <%= locals.errors && errors.rating ? errors.rating.msg : "" %>
            </p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= Movie.awards %>" ></p>
            <p>
                <%= locals.errors && errors.awards ? errors.awards.msg : "" %>
            </p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= Movie.release_date.toISOString().substring(0,10) %>"></p>
            <p>
                <%= locals.errors && errors.release_date ? errors.release_date.msg : "" %>
            </p>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= Movie.length %>"></p>
            <p>
                <%= locals.errors && errors.length ? errors.length.msg : "" %>
            </p>
            <label for="genre_id">Genre </label>
            <p>
                <select name="genre_id" id="">
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (Movie.genre_id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>

 
            
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
</body>

</html>